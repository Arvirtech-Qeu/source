{
  "compilerOptions": {
    "target": "ESNext", // Specify the ECMAScript target version
    "module": "ESNext", // Specify the module code generation
    "lib": ["DOM", "ESNext"], // Specify the library files to be included
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "moduleResolution": "Node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "baseUrl": "./src", // Base directory to resolve non-relative module names
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["utils/*"],
      "@pages*": ["pages/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"]
    },
    "jsx": "react-jsx" // Specify the JSX code generation mode
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include all TypeScript files
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
