<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.swomb.qbox</groupId>
		<artifactId>APP-SWOMB-QBOX</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>qbox-boot</artifactId>
	<name>qbox-boot</name>
	<description>app bootstrap</description>
	<dependencies>
		<dependency>
			<groupId>com.swomb.qbox.crypto</groupId>
			<artifactId>qbox-crypto</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.swomb.qbox.common</groupId>
			<artifactId>qbox-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.infinispan</groupId>
			<artifactId>infinispan-core</artifactId>
			<version>9.4.16.Final</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.infinispan</groupId>
			<artifactId>infinispan-cachestore-jdbc</artifactId>
			<version>9.4.16.Final</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
		         <archive>
		           <manifestEntries>
		             <Dependencies>org.infinispan:ispn-12.1 services</Dependencies>
		           </manifestEntries>
		         </archive>
		      </configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>../META-INF/*.SF</exclude>
										<exclude>../META-INF/*.DSA</exclude>
										<exclude>../META-INF/*.RSA</exclude>
										<exclude>../META-INF/*.SF</exclude>
										<exclude>./META-INF/*.DSA</exclude>
										<exclude>./META-INF/*.RSA</exclude>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>../META-INF/*.SF</exclude>
										<exclude>../META-INF/*.DSA</exclude>
										<exclude>../META-INF/*.RSA</exclude>
										<exclude>../META-INF/*.SF</exclude>
										<exclude>./META-INF/*.DSA</exclude>
										<exclude>./META-INF/*.RSA</exclude>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Main-Class>io.vertx.core.Launcher</Main-Class>
										<Main-Verticle>com.swomb.boot.service.MainVerticle</Main-Verticle>
									</manifestEntries>
								</transformer>
							</transformers>
							<artifactSet />
							<outputFile>${project.build.directory}/Boot-Runner.jar</outputFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

